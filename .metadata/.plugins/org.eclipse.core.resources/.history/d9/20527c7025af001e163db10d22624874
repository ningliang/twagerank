package twagerank;

import java.io.File;
import java.util.Date;
import java.util.LinkedList;
import java.util.List;

import logutils.LogFile;
import logutils.Result;
import logutils.ResultHandler;

public class TwageRank {
	public static void main(String[] args) {
		// Usage
		if (args.length != 1) {
			System.out.println("usage: TwageRank <dir>");
			System.exit(1);
		}
		
		// Ensure dir
		File dir = new File(args[0]);
		if (!dir.isDirectory()) {
			System.out.println("Not a directory: " + dir.getAbsolutePath());
			System.exit(1);
		}
		
		// Get array of File
		List<File> files = new LinkedList<File>();
		for (File file : dir.listFiles()) if (file.getPath().endsWith(".txt")) files.add(file);
				
		// Execution
		long start = new Date().getTime();
		
		// Initialize
		try {
			for (File file : files) {
				LogFile log = new LogFile(file.getPath());
				log.readAll(new ResultHandler() {
					public void handleResult(Result result) {
						// TODO Auto-generated method stub
						System.out.println(result.getId() + " " + result.getStatus());
					}
				});
			}
		} catch (Exception e) {
			e.printStackTrace();
			System.exit(1);
		}
		
		long end = new Date().getTime();
		System.out.println("Elapsed time: " + ((end - start)/1000) + " seconds.");
	}
}
