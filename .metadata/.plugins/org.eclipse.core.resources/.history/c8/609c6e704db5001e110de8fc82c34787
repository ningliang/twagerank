package pruner;

import java.io.File;
import java.util.List;

import logutils.LogFile;
import utils.Utility;

public class Pruner {
	public static void main(String[] args) {
		// Usage
		if (args.length != 2) {
			System.out.println("usage: Pruner <indir> <outdir>");
			System.exit(1);
		}
		
		// Get all valid ids
		List<File> files = Utility.getFiles(args[0]);
		IdentifierSet set = new IdentifierSet();
		try {
			for (File file : files) {
				LogFile log = new LogFile(file.getPath());
				log.readAll(set);
			}
		} catch (Exception e) {
			e.printStackTrace();
			System.out.println("Done");
		}
		
		// Second pass again, enqueue into writer that 
	}
	
